<body>
    <div class="container">
        <div class="header">
            <h1>Private Equity Corporate Intelligence</h1>
            <h2>Comprehensive Data Source Guide - 2025</h2>
            <div class="stats">
                <div class="stat"><div class="stat-value" style="color: #3b82f6;">12</div><div class="stat-label">Total Sources</div></div>
                <div class="stat"><div class="stat-value" style="color: #10b981;">3</div><div class="stat-label">Free Resources</div></div>
                <div class="stat"><div class="stat-value" style="color: #8b5cf6;">7</div><div class="stat-label">Premium Quality</div></div>
                <div class="stat"><div class="stat-value" style="color: #f97316;">7</div><div class="stat-label">Categories</div></div>
            </div>
        </div>

        <div class="filters">
            <input type="text" class="search-box" id="search" placeholder="Search by name, description, or data type...">
            <div class="category-buttons" id="categories">
                <button class="category-btn active" data-cat="all">All Sources</button>
                <button class="category-btn" data-cat="financial">Financial</button>
                <button class="category-btn" data-cat="legal">Legal</button>
                <button class="category-btn" data-cat="corporate">Corporate</button>
                <button class="category-btn" data-cat="ip">IP</button>
            </div>
        </div>

        <div id="sources"></div>
    </div>

    <script>
        const data = [
            {cat:'financial',name:'PitchBook',url:'https://pitchbook.com',desc:'Comprehensive PE/VC/M&A database with valuations, deal multiples, investor networks, and EBITDA data',types:['Financials','EBITDA','Valuations','Deal History'],coverage:'Global, strong in US/EMEA',quality:5,cost:'High ($$$)',bestFor:'PE/VC deal teams',updated:'Real-time',limits:'High cost; mid-market coverage inconsistent'},
            {cat:'financial',name:'S&P Capital IQ',url:'https://www.spglobal.com/marketintelligence',desc:'Global company financials, credit ratings, ownership structures, and macroeconomic forecasts',types:['Financials','Credit Ratings','Ownership','KPIs'],coverage:'Global institutional scale',quality:5,cost:'High ($$$)',bestFor:'Credit analysts, debt investors',updated:'Real-time',limits:'Enterprise pricing'},
            {cat:'financial',name:'Grata',url:'https://grata.com',desc:'Specialized in sourcing middle-market companies in fragmented or overlooked industries',types:['Company Profiles','Mid-Market Data','Contact Info'],coverage:'US lower/middle market',quality:4,cost:'Medium ($$)',bestFor:'Mid-market PE firms',updated:'Daily',limits:'Limited large enterprise coverage'},
            {cat:'financial',name:'Crunchbase',url:'https://www.crunchbase.com',desc:'Startup and early-stage company coverage with funding rounds and investor data',types:['Funding Rounds','Investor Data','Startup Profiles'],coverage:'Global startups',quality:4,cost:'Low-Medium ($-$$)',bestFor:'Startup investors',updated:'Real-time',limits:'Limited mature company depth'},
            {cat:'corporate',name:'D&B Hoovers',url:'https://www.dnb.com',desc:'Global commercial database with 250M+ companies, DUNS numbers, credit ratings',types:['Company Profiles','Credit Ratings','DUNS','Hierarchies'],coverage:'Global 250M+ companies',quality:4,cost:'Medium-High ($$-$$$)',bestFor:'Sales intelligence, credit risk',updated:'Daily claimed',limits:'Data accuracy issues reported'},
            {cat:'corporate',name:'ZoomInfo',url:'https://www.zoominfo.com',desc:'B2B intelligence platform with AI-driven insights, intent data, and contact database',types:['Contact Info','Intent Data','Org Charts','Tech Stack'],coverage:'US-focused',quality:4,cost:'High ($$$)',bestFor:'Sales prospecting',updated:'Real-time',limits:'Phone accuracy issues; expensive'},
            {cat:'legal',name:'SEC EDGAR',url:'https://www.sec.gov/edgar',desc:'Free US public company filings including 10-K, 10-Q, 8-K, proxy statements',types:['10-K','10-Q','8-K','Proxies','IPO Filings'],coverage:'US public companies',quality:5,cost:'Free',bestFor:'Public company due diligence',updated:'Real-time',limits:'Public companies only'},
            {cat:'legal',name:'PACER',url:'https://pacer.uscourts.gov',desc:'Federal court electronic records - litigation, bankruptcy, and appeals nationwide',types:['Litigation','Dockets','Court Filings','Bankruptcy'],coverage:'All US federal courts',quality:5,cost:'Low ($0.10/page)',bestFor:'Litigation research',updated:'Real-time',limits:'Pay-per-page; dated interface'},
            {cat:'ip',name:'USPTO PatentsView',url:'https://patentsview.org',desc:'Comprehensive US patent database with bulk download capabilities and detailed analytics',types:['Patents','Applications','Inventors','Assignees'],coverage:'US patents since 1976',quality:5,cost:'Free',bestFor:'Patent research, IP due diligence',updated:'Weekly',limits:'US patents only'},
            {cat:'market',name:'IBISWorld',url:'https://www.ibisworld.com',desc:'Industry research reports with market size, trends, forecasts, and competitive landscape',types:['Industry Reports','Market Size','Trends','Forecasts'],coverage:'US, Global 1,300+ industries',quality:4,cost:'Medium-High ($$-$$$)',bestFor:'Market sizing, industry analysis',updated:'Monthly',limits:'Industry-level only'},
            {cat:'people',name:'LinkedIn Sales Navigator',url:'https://business.linkedin.com/sales-solutions',desc:'Professional network with 900M+ members - leadership identification and org charts',types:['Profiles','Job Titles','Career History','Connections'],coverage:'Global 900M+ professionals',quality:4,cost:'Low-Medium ($-$$)',bestFor:'Leadership research',updated:'Real-time',limits:'Self-reported data'},
            {cat:'media',name:'Wall Street Journal',url:'https://www.wsj.com',desc:'Financial news, M&A coverage, and business intelligence with global reach',types:['News','M&A Announcements','Earnings','Analysis'],coverage:'Global',quality:5,cost:'Low ($)',bestFor:'Market trends, deal flow',updated:'Real-time',limits:'News only, not structured data'}
        ];

        let cat='all',search='';

        function render(){
            const filtered=data.filter(s=>(cat==='all'||s.cat===cat)&&(search===''||s.name.toLowerCase().includes(search)||s.desc.toLowerCase().includes(search)||s.types.some(t=>t.toLowerCase().includes(search))));
            document.getElementById('sources').innerHTML=filtered.map(s=>`
                <div class="source-card">
                    <div class="source-name">${s.name}</div>
                    <a href="${s.url}" target="_blank" class="source-url">${s.url} â†—</a>
                    <div class="source-description">${s.desc}</div>
                    <div class="detail-grid">
                        <div><div class="detail-label">Quality</div><div class="detail-value"><span class="badge ${s.quality>=5?'badge-excellent':'badge-good'}">${s.quality===5?'Excellent':'Very Good'}</span></div></div>
                        <div><div class="detail-label">Cost</div><div class="detail-value">${s.cost}</div></div>
                        <div><div class="detail-label">Coverage</div><div class="detail-value">${s.coverage}</div></div>
                        <div><div class="detail-label">Updated</div><div class="detail-value">${s.updated}</div></div>
                    </div>
                    <div class="data-types">${s.types.map(t=>`<span class="data-type">${t}</span>`).join('')}</div>
                    <div style="color:#64748b;font-size:0.875rem;margin-top:10px;"><strong>Best For:</strong> ${s.bestFor}</div>
                    ${s.limits?`<div style="color:#64748b;font-size:0.875rem;margin-top:10px;padding-top:10px;border-top:1px solid #e2e8f0;"><strong>Limitations:</strong> ${s.limits}</div>`:''}
                </div>
            `).join('');
        }

        document.getElementById('categories').addEventListener('click',e=>{
            if(e.target.dataset.cat){
                document.querySelectorAll('.category-btn').forEach(b=>b.classList.remove('active'));
                e.target.classList.add('active');
                cat=e.target.dataset.cat;
                render();
            }
        });

        document.getElementById('search').addEventListener('input',e=>{
            search=e.target.value.toLowerCase();
            render();
        });

        render();
    </script>
</body>
